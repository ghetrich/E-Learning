<!-- Form Element area Start-->
<div class="form-element-area">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
				<div class="form-element-list mg-t-30">
					<div class="cmp-tb-hd">
						<h2>Community Profile</h2>
						<p>
							An input mask helps the user with the input. This can be
							useful for dates, numerics, phone numbers etc...
						</p>
					</div>
					<div class="row">
						<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
							<div class="nk-int-mk">
								<h2>Name</h2>
							</div>
							<div class="form-group ic-cmp-int">
								<div class="form-ic-cmp">
									<i class="notika-icon notika-support"></i>
								</div>
								<div class="nk-int-st">
									<input
										type="text"
										class="form-control"
										placeholder="Community Name.."
									/>
								</div>
							</div>
						</div>
						<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
							<div class="nk-int-mk">
								<h2>Other Name</h2>
							</div>
							<div class="form-group ic-cmp-int">
								<div class="form-ic-cmp">
									<i class="notika-icon notika-mail"></i>
								</div>
								<div class="nk-int-st">
									<input
										type="text"
										class="form-control"
										placeholder="Alias..."
									/>
								</div>
							</div>
						</div>
						<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
							<div class="nk-int-mk">
								<h2>Slogan</h2>
							</div>
							<div class="form-group ic-cmp-int">
								<div class="form-ic-cmp">
									<i class="notika-icon notika-tax"></i>
								</div>
								<div class="nk-int-st">
									<input
										type="text"
										class="form-control"
										placeholder="Slogan"
									/>
								</div>
							</div>
						</div>

						<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
							<div class="nk-int-mk">
								<h2>Telephone</h2>
							</div>
							<div class="form-group ic-cmp-int">
								<div class="form-ic-cmp">
									<i class="notika-icon notika-phone"></i>
								</div>
								<div class="nk-int-st">
									<input
										type="text"
										class="form-control"
										data-mask="+233 (99) 999-9999"
										placeholder="Phone"
									/>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
				<div class="form-element-list mg-t-30">
					<div class="cmp-tb-hd">
						<h2>Address</h2>
						<p>Make long, unwieldy select boxes more user friendly.</p>
                        
					</div>
					<div class="row">
						<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
							<div class="nk-int-mk sl-dp-mn">
								<h2>Region</h2>
							</div>
							<div class="chosen-select-act fm-cmp-mg">
								<select
									class="chosen"
									data-placeholder="Choose a Country..."
								>
									<%if(regions){%> 
                                        
                                        <%for(var region of regions){%>

									<option value="<%= region.region %>"><%= region.region %></option>
									
								
									<%}%> 
                                    
                                    <%}%>
								</select>
							</div>
						</div>
						<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
							<div class="nk-int-mk sl-dp-mn sm-res-mg-t-10">
								<h2>City</h2>
							</div>
							<div class="chosen-select-act fm-cmp-mg">
								<select
									class="chosen"
									data-placeholder="Choose a Country..."
								>

                                <%if(regions){%> 
                                        
                                        <%for(var region of regions){%>
                                        <optgroup label="<%= region.region %> Region">
                                            <%for(var city of region.cities){%>
										<option value="<%= city %>" ><%= city %></option>
                                        <%}%>
									    </optgroup>				
								
									<%}%> 
                                    
                                    <%}%>
									
								</select>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

